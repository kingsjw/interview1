{
  "compilerOptions": {
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/types/express.d.ts",
      "./node_modules/@types"
    ]
  },
  "ts-node":{
    "esm":true
  },
  "include": ["src/**/**.ts", "app.ts"],
  "exclude": [
    "node_modules",
  ]
}